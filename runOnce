Install-WindowsFeature AD-Domain-Services -IncludeManagementTools
install-windowsFeature DNS -includeManagementTools
Install-WindowsFeature DHCP -IncludeManagementTools
netsh dhcp add securitygroups
Restart-Service dhcpserver

Add-DhcpServerInDC -DnsName SCORE.cours.cegep -IPAddress 10.10.10.254 
Get-DhcpServerInDC


Set-DhcpServerv4DnsSetting -ComputerName "SCORE.cours.cegep" -DynamicUpdates "Always" -DeleteDnsRRonLeaseExpiry $True

$Credential = Get-Credential
Set-DhcpServerDnsCredential -Credential $Credential -ComputerName "SCORE.cours.cegep"

Add-DhcpServerv4Scope -name "SCOPE" -StartRange 10.10.10.1 -EndRange 10.10.10.240 -SubnetMask 255.255.255.0 -State Active
# Set un adresse de routeur par d√©faut
#Set-DhcpServerv4OptionValue -OptionID 3 -Value 10.10.10.1 -ScopeID 10.10.10.0 -ComputerName SCORE.cours.cegep
Set-DhcpServerv4OptionValue -DnsDomain SCORE.cours.cegep -DnsServer 10.10.10.254
Install-ADDSForest -DomainName cours.cegep 
